        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_below="@id/relchoices"
        android:layout_centerInParent="true"
        android:id="@+id/toggle_choices_visibility"
        android:src="@drawable/ic_iconmonstr_eye_5"/-->

    <ImageView
        android:id="@+id/addFlashCard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/iconplus" />

    <ImageView
        android:id="@+id/editFlashCard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/addFlashCard"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        app:srcCompat="@drawable/iconedit" />

    <ImageView
        android:id="@+id/btnNext"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/addFlashCard"
        android:layout_alignParentTop="true"
        android:layout_marginTop="224dp"
        app:srcCompat="@drawable/iconnext" />

    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/editFlashCard"
        android:layout_alignTop="@+id/btnNext"
        app:srcCompat="@drawable/icontrash" />

    <ImageView
        android:id="@+id/btnEdit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btnNext"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/iconedit" />

    <TextView
        android:id="@+id/txtTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnEdit"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="165dp"
        android:text="TextView" />
</RelativeLayout>
